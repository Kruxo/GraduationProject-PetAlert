@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background-color: #fff9f4;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 400px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    @@media (max-width: 768px) {
        .form-container {
            max-width: 300px;
        }
    }

    .form-title {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
        color: hsl(30, 10%, 20%);
    }

    .form-description {
        text-align: center;
        color: hsl(30, 10%, 40%);
        font-size: 16px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-floating label {
        font-size: 14px;
        color: hsl(30, 10%, 35%);
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: hsl(30, 10%, 35%);
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        font-size: 16px;
        border: 2px solid hsl(30, 20%, 85%);
        border-radius: 12px;
        background-color: #fffaf4;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: hsl(30, 30%, 65%);
        box-shadow: 0 0 8px rgba(162, 107, 61, 0.4);
    }

    .form-control::placeholder {
        color: hsl(30, 10%, 65%);
    }

    .checkbox {
        margin-bottom: 15px;
    }

    .form-check-input {
        margin-right: 8px;
    }

    .btn-primary {
        background-color: hsl(30, 60%, 35%);
        color: white;
        border: none;
        padding: 14px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 12px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: hsl(30, 60%, 30%);
        transform: translateY(-2px);
    }

    .form-footer {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
    }

    .form-footer a {
        color: hsl(30, 60%, 30%);
        text-decoration: none;
    }

    .form-footer a:hover {
        text-decoration: underline;
    }

    .text-danger {
        font-size: 14px;
        color: red;
    }
</style>

<div class="form-container">
    <h1 class="form-title">@ViewData["Title"]</h1>
    <div class="form-description">Enter your email to reset your password.</div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <!-- Email Input -->
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <!-- Reset Password Button -->
        <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
