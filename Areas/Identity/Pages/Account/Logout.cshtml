@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<style>
    body {
        background-color: #fff9f4;
        margin: 0;
        padding: 0;
    }

    .logout-container {
        max-width: 400px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .logout-container {
            max-width: 300px;
        }
    }


    .logout-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 15px;
        color: hsl(30, 10%, 20%);
    }

    .logout-message {
        color: hsl(30, 10%, 40%);
        font-size: 16px;
        margin-bottom: 20px;
    }

    .btn-logout {
        background-color: hsl(30, 60%, 35%);
        color: white;
        border: none;
        padding: 14px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 12px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-logout:hover {
        background-color: hsl(30, 60%, 30%);
        transform: translateY(-2px);
    }
</style>

<div class="logout-container">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h1 class="logout-title">@ViewData["Title"]</h1>
        <p class="logout-message">Are you sure you want to log out?</p>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
            method="post">
            <button type="submit" class="btn-logout" onclick="clearCartOnLogout()">Log out</button>
        </form>
    }
</div>
