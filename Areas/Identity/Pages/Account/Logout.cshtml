@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .logout-container {
        max-width: 400px;
        margin: 50px auto;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

    .logout-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #333;
    }

    .logout-message {
        color: #555;
        margin-bottom: 20px;
    }

    .btn-logout {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
        text-align: center;
    }

    .btn-logout:hover {
        background-color: #b52d37;
    }
</style>

<div class="logout-container">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <h1 class="logout-title">@ViewData["Title"]</h1>
        <p class="logout-message">Are you sure you want to log out?</p>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
            method="post">
            <button type="submit" class="btn-logout" onclick="clearCartOnLogout()">Log out</button>
        </form>
    }
</div>
