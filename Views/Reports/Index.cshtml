@model FoundLostIndexVm
@{


    
// Combine lostPetMarkers and foundPetMarkers
var combinedMarkers = Model.LostPets
    .Select(f => new
    {
        f.Name,
        f.Description,
        f.Image,
        f.Latitude,
        f.Longitude,
    })
    .Concat(Model.FoundPets
        .Select(f => new
        {
            f.Name,
            f.Description,
            f.Image,
            f.Latitude,
            f.Longitude,
        }))
    .ToList();



}

