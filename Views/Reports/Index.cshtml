    <div style="display: flex; justify-content: center; width:90%; max-width: 1200px;">
        <ul class="list-unstyled">
            <h3> List of lost and found pets</h3>
        @foreach (var marker in combinedMarkers)
        {
    
             <div class="card mb-1" style=" width:800px;">
                <li class="row align-items-start">
                    <div class="col-auto">
                        <img src="@marker.Image" class="image-fit rounded-left " alt="@marker.Image">
                    </div>
                        <div class="col">
                            <h5 class="card-title mt-3"><strong>@marker.Name</strong></h5>
                            <p class="card-text me-3">@marker.Description</p>
                        </div>
                </li>
            </div>

        }
        </ul>

