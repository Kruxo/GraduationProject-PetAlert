@model FoundLostIndexVm

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject UserService UserService
@{
    var isAdmin = await UserService.IsCurrentUserAdministratorAsync();
}

@{
    ViewData["Title"] = "Your reported pets";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #fff9f4;
        color: #4a3a28;
        text-align: center;
    }

    .report-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 20px;
    }

    .report-container h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: hsl(30, 10%, 20%);
        margin-bottom: 30px;
    }

    .card-container {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .card {
        background: #ffffff;
        border: 1px solid #e6ccb4;
        border-radius: 16px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        padding: 30px;
        width: 320px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card h2 {
        font-size: 1.8rem;
        font-weight: bold;
        color: hsl(30, 60%, 35%);
    }

    .card p {
        font-size: 1rem;
        color: hsl(30, 10%, 40%);
        margin: 0;
    }

    .card .btn {
        display: inline-block;
        background-color: hsl(28, 54%, 39%);
        color: white;
        text-decoration: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: bold;
        font-size: 1rem;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .card .btn:hover {
        color: white !important;
        background-color: hsl(30, 60%, 30%);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<body>
    <div class="report-container">
        <h1>Your reported pets</h1>
        <div class="card-container">
            <!-- Lost Pet Card -->
            <div class="card">
                <div class="card-icon">
                    <img width="50" height="50" src="https://img.icons8.com/ios/50/cat-footprint.png"
                        alt="cat-footprint" />
                </div>
                <h2>Lost Pets</h2>
                <p>This button will take you to your reported lost pets. Here you can view your reports, edit or delete
                    them.</p>
                <a class="btn" asp-area="" asp-controller="Lost" asp-action="Index">Your Lost Pets</a>
            </div>

            <!-- Found Pet Card -->
            <div class="card">
                <div class="card-icon">
                    <img width="50" height="50" src="https://img.icons8.com/ios/50/search--v1.png" alt="search--v1" />
                </div>
                <h2>Found Pets</h2>
                <p>This button will take you to your reported found pets. Here you can view your reports, edit or delete
                    them.</p>
                <a class="btn" asp-area="" asp-controller="Found" asp-action="Index">Your Found Pets</a>
            </div>
        </div>
    </div>
</body>
