@model PetTypeCreateVm;

<h1 class="text-center my-4">Create Pet Type</h1>
<div class="d-flex justify-content-center card">
    <form asp-action="Create" method="post" class="p-4 shadow rounded bg-light">

        <div class="form-group mb-3">
            <label asp-for="Type" class="control-label">Pet Type</label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Image" class="control-label">Image</label>
            <input asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="form-group d-grid">
            <input type="submit" value="Create" class="btn btn-primary " />
        </div>
    </form>
</div>
