@model PetTypeCreateVm

@{
    ViewData["Title"] = "Create pet category";
}

<style>
    body {
        background-color: #fff9f4;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    @@media (max-width: 768px) {
        .form-container {
            max-width: 300px;
        }
    }

    .form-title {
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: hsl(30, 10%, 35%);
    }

    .form-control {
        border: 2px solid hsl(30, 20%, 85%);
        border-radius: 12px;
        background-color: #fffaf4;
        padding: 12px 15px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: hsl(30, 30%, 65%);
        box-shadow: 0 0 8px rgba(162, 107, 61, 0.4);
    }

    .btn {
        display: block;
        width: 100%;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
    }

    .btn:hover {
        transform: translateY(-2px);
    }
</style>

<div class="form-container">
    <h1 class="form-title">Create Pet Type</h1>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Type" class="form-label">Pet Type</label>
            <input asp-for="Type" class="form-control" placeholder="Enter pet type" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="form-label">Image</label>
            <input asp-for="Image" class="form-control" placeholder="Enter image URL" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="padding: 14px 20px">Create</button>
    </form>
</div>
