@model PetTypeDeleteVm

@{
    ViewData["Title"] = "Delete pet category";
}

<style>
    body {
        background-color: #fff9f4;
    }

    .delete-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
    }

    h1 {
        font-size: 28px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .delete-image {
        max-height: 200px;
        object-fit: cover;
        margin: 20px 0;
        border-radius: 12px;
        background-color: #f0e4d7;
    }

    .delete-warning {
        font-size: 16px;
        color: hsl(0, 70%, 40%);
        margin-top: 15px;
    }

    .btn-group {
        margin-top: 20px;
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .btn-secondary {
        display: block;
        width: 100%;
        color: #ffffff;
        border: none;
        padding: 14px 20px;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
    }

    .btn-danger {
        display: block;
        width: 100%;
        color: #ffffff;
        border: none;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
    }
</style>

<body>
    <div class="delete-container">
        <h1>Delete Pet Type</h1>
        <img src="@Model.Image" alt="@Model.Type" class="delete-image" />
        <p>Are you sure you want to delete this pet type <strong>"@Model.Type"</strong>?</p>
        <p class="delete-warning">This will also delete ALL pets associated with that pet type!</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</body>
