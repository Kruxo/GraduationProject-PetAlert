@model PetTypeDeleteVm

<style>
    .delete-container {
        max-width: 500px;
        margin: 40px auto;
        background-color: #ffffff;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
    }

    .delete-title {
        font-size: 28px;
        color: hsl(0, 70%, 50%);
        font-weight: bold;
        margin-bottom: 15px;
    }

    .delete-image {
        max-height: 200px;
        object-fit: cover;
        margin: 20px 0;
        border-radius: 12px;
    }

    .delete-warning {
        font-size: 16px;
        color: hsl(0, 70%, 40%);
        margin-top: 15px;
    }

    .btn-group {
        margin-top: 20px;
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: bold;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-danger {
        background-color: hsl(0, 70%, 50%);
        color: white;
    }
</style>

<div class="delete-container">
    <h1 class="delete-title">Delete Pet Type</h1>
    <img src="@Model.Image" alt="@Model.Type" class="delete-image" />
    <p>Are you sure you want to delete this pet type <strong>"@Model.Type"</strong>?</p>
    <p class="delete-warning">This will also delete ALL pets associated with that pet type!</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="btn-group">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>
