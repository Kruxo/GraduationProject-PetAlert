@model PetTypeIndexVm

@{
    ViewData["Title"] = "All pet categories";
}

<style>
    body {
        background-color: #fff9f4;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: hsl(30, 60%, 30%);
        margin-bottom: 30px;
        text-align: center;
        text-transform: uppercase;
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
    }

    .card {
        width: 18rem;
        background-color: #ffffff;
        border: none;
        border-radius: 16px;
        border: 1px solid #e6ccb4;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card img {
        border-radius: 16px 16px 0 0;
        max-height: 200px;
        min-height: 200px;
        object-fit: cover;
    }

    .card-title {
        color: hsl(30, 10%, 20%);
        font-size: 1.2rem;
        font-weight: bold;
        text-align: center;
        margin: 10px 0;
    }

    .card-text {
        font-size: 0.9rem;
        color: hsl(30, 10%, 40%);
        text-align: center;
        margin-bottom: 10px;
    }

    .btn-secondary {
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
    }

    .btn-danger {
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-danger:hover {
        transform: translateY(-2px);
    }

    .btn-success {
        border: none;
        color: white;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-success:hover {
        transform: translateY(-2px);
    }

    .alert {
        background-color: hsl(30, 20%, 90%);
        color: hsl(30, 10%, 25%);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        font-size: 1rem;
        font-weight: bold;
    }
</style>

<div class="container text-center">
    <h1>Pet Type Categories</h1>
    <div class="my-4">
        <a asp-action="Create" class="btn btn-success">
            + Add Category
        </a>
    </div>

    <div class="d-flex flex-wrap justify-content-center">
        @foreach (var petType in Model.PetTypes)
        {
            <div class="card text-center">
                <img src="@petType.Image" alt="@petType.Type" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@petType.Type</h5>
                    <hr>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@petType.Id" class="btn btn-secondary flex-fill">Edit</a>
                        <a asp-action="Delete" asp-route-id="@petType.Id" class="btn btn-danger flex-fill">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
