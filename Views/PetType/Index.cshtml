@model PetTypeIndexVm

<div class="container text-center my-4">
    <div class="my-4">
        <a asp-action="Create" class="btn btn-success">
            + Add Category
        </a>
    </div>

    <div class="d-flex flex-wrap justify-content-center gap-4">
        @foreach (var petType in Model.PetTypes)
        {
            <div class="card text-center" style="width: 18rem;">
                <img src="@petType.Image" alt="@petType.Type" class="card-img-top"
                    style="height: 180px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@petType.Type</h5>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@petType.Id" class="btn btn-warning flex-fill">Edit</a>
                        <a asp-action="Delete" asp-route-id="@petType.Id" class="btn btn-danger flex-fill">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
